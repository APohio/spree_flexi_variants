<table class="index">
  <tr>
    <th><%= Spree.t("name") %></th>
    <th><%= Spree.t("presentation") %></th>
    <th><%= Spree.t("description") %></th>
    <th>&nbsp;</th>
  </tr>
  <% @product_customization_types.each do |customization_type| %>
    <tr>
      <td><%= customization_type.name %></td>
      <td><%= customization_type.presentation %></td>
      <td><%= customization_type.description %></td>
      <td class="actions">
      <%= link_to_with_icon 'delete',  Spree.t("remove"), remove_admin_product_product_customization_type_url(@product, customization_type) %>
      </td>
    </tr>
  <% end %>
  <% if @product_customization_types.empty? %>
   <tr><td colspan="3"><%= Spree.t(:none) %></td></tr>
  <% end %>
</table>

<div id="customization-types"></div>
  <span id="new_ct_link">
    <%= link_to icon('add') + ' ' + Spree.t("add_product_customization_type"), available_admin_product_product_customization_types_url(@product), :remote => :true, :class => 'iconlink' %>
  </span>
